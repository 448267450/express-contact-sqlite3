doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title My Contact Database
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous") 
  body.bg-dark
    block content
      div.jumbotron.container
        h1.display-6.text-light= title
        p.text-danger.font-weight-normal Are you sure you want to delete the following Contact?
        hr.my-4.text-light
        if msg 
          p(class='redtext')=msg
        form(method='POST' action=`/contacts/${contact.id}/delete`)
          button.btn.btn-outline-danger.btn-sm(type='submit') Confirm Delete 
          a.btn.btn-outline-success.btn-lg.btn-sm.mx-3(href=`/contacts/${contact.id}`) Cancel
