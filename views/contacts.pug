doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title My Contact Database
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous") 
  body.bg-dark
    block content
      .jumbotron.container
         h1.display-6.text-light= title
         p.text-light Welcome to #{title}
         a.btn.btn-primary.btn-lg(href='/contacts/add') Add a Contact 
         hr.my-4.text-light
         .container
            h2.text-light Contact List
            table.table 
               thead 
                  tr 
                    th(scope="col").text-light First Name 
                    th(scope="col").text-light Last Name
                    th(scope="col").text-light Email Address
               tbody
                 each val in contacts
                   tr
                     td
                       a(href=`/contacts/${val.id}`, style="text-decoration: none;").text-success= val.firstName
                     td
                       a(href=`/contacts/${val.id}`, style="text-decoration: none;").text-success= val.lastName
                     td
                       a(href=`/contacts/${val.id}`, style="text-decoration: none;").text-success= val.emailAdd
